<Window x:Class="WPF_Audio.NamePlaylist"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Введите название" Height="150" Width="400" WindowStartupLocation="CenterOwner"
        Background="#121212">
    <StackPanel Margin="10">
        <TextBlock x:Name="Question" Text="Введите название:" Foreground="White"/>
        <TextBox x:Name="ResponseTextBox" Margin="0,10,0,10"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="OK" Width="80" IsDefault="True" Click="OkButton_Click" Margin="0,0,10,0"/>
            <Button Content="Отмена" Width="80" IsCancel="True"/>
        </StackPanel>
    </StackPanel>
</Window>
